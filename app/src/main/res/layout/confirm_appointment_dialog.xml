    <TextView
        android:id="@+id/tv_bar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:gravity="center"
        android:padding="20dp"
        android:text="Thank you for your booking, please complete the payment step"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_home"
        android:layout_width="127dp"
        android:layout_height="32dp"
        android:layout_marginTop="21dp"
        android:background="@drawable/btn_rectangle"
        android:backgroundTint="#FFFFFF"
        android:gravity="center"
        android:text="Home"
        android:textColor="@color/pink_text"
        app:layout_constraintStart_toStartOf="@+id/tv_bar"
        app:layout_constraintTop_toBottomOf="@+id/tv_bar" />

    <Button
        android:id="@+id/btn_cart"
        android:layout_width="127dp"
        android:layout_height="32dp"
        android:layout_marginTop="21dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/btn_rectangle"
        android:backgroundTint="#FFFFFF"
        android:gravity="center"
        android:text="Cart"
        android:textColor="@color/pink_text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/tv_bar"
        app:layout_constraintTop_toBottomOf="@+id/tv_bar" />
